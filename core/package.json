{
  "name": "@camunda8/btp-plugin-core",
  "version": "1.0.1",
  "description": "Camunda BTP Plugin: core module",
  "repository": "https://github.com/camunda/sap-btp-plugin",
  "license": "Camunda License 1.0",
  "imports": {
    "#cds-models/*": "./@cds-models/*/index.js"
  },
  "main": "srv/lib/camunda.js",
  "scripts": {
    "//_deploy:sqlite": "intended for local dev",
    "_deploy:sqlite": "cds deploy --to sqlite",
    "build": "run-s _build:cds _build:types",
    "_build:cds": "npx cds build --production --ws-pack",
    "_build:types": "npx @cap-js/cds-typer \"*\" --outputDirectory gen/srv/@cds-models",
    "start": "cds-serve",
    "start:local": "cds-serve",
    "test": "jest --forceExit --silent"
  },
  "dependencies": {
    "@camunda8/sdk": "^8.6.33",
    "@camunda8/websocket": "*",
    "@cap-js/cds-typer": ">=0.34",
    "@cap-js/postgres": "^1.13.0",
    "@cap-js/sqlite": "^1",
    "@sap/cds": "^8",
    "@sap/cds-dk": "^8",
    "@sap/xssec": "^4",
    "npm-run-all": "^4.1.5",
    "express": "^4"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^1",
    "chai": "^4",
    "chai-as-promised": "^7",
    "chai-subset": "^1.6.0",
    "jest": "^29.7.0",
    "msw": "^2.7.3"
  },
  "engines": {
    "node": "^22"
  },
  "cds": {
    "requires": {
      "auth": {
        "restrict_all_services": false
      }
    }
  }
}