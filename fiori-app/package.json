{
	"name": "@camunda8/fiori-app",
	"version": "1.0.0-alpha.1",
	"description": "generic Fiori/UI5 app for Camunda BTP Integration",
	"license": "Apache-2.0",
	"author": "Volker Buzek",
	"scripts": {
		"build": "ui5 build --clean-dest",
		"build:opt": "ui5 build self-contained --clean-dest --all",
		"clean": "rimraf dist coverage",
		"karma": "karma start",
		"karma-ci": "karma start karma-ci.conf.js",
		"karma-ci-cov": "karma start karma-ci-cov.conf.js",
		"lint": "eslint webapp",
		"//start": "production start, serves /dist and thus need a prior build",
		"start": "node index.js",
		"//start:local": "this also starts the CAP layer -> http://localhost:5001/index-local.html?channelId=xxx",
		"start:local": "ui5 serve --port 8080",
		"test": "npm run lint && npm run karma-ci-cov",
		"ts-typecheck": "tsc --noEmit",
		"wdi5": "wdio run ./webapp/test/e2e/wdio.conf.ts"
	},
	"dependencies": {
		"@sap/approuter": "^16.8.2"
	},
	"devDependencies": {
		"@camunda8/btp-integration-core": "*",
		"@camunda8/user-task-fiori": "file:../user-task-fiori",
		"@openui5/types": "^1.128.0",
		"@ui5/cli": "^4.0.6",
		"@wdio/cli": "^8.40.5",
		"@wdio/local-runner": "^8.40.5",
		"@wdio/mocha-framework": "^8.40.3",
		"@wdio/spec-reporter": "^8.40.3",
		"eslint": "^9.9.1",
		"globals": "^15.9.0",
		"karma": "^6.4.4",
		"karma-chrome-launcher": "^3.2.0",
		"karma-coverage": "^2.2.1",
		"karma-ui5": "^4.0.1",
		"karma-ui5-transpile": "^3.4.8",
		"rimraf": "^6.0.1",
		"ts-node": "^10.9.2",
		"typescript": "^5.6.2",
		"typescript-eslint": "^8.3.0",
		"ui5-middleware-cap": "^3.3.0",
		"ui5-middleware-livereload": "^3.0.3",
		"ui5-tooling-modules": "^3.13.1",
		"ui5-tooling-transpile": "^3.4.8",
		"wdio-ui5-service": "^2.0.10"
	}
}
