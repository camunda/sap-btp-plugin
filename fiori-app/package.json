{
  "name": "@camunda8/fiori-app",
  "version": "1.0.0-alpha.1",
  "description": "generic Fiori/UI5 app for Camunda BTP Integration",
  "license": "Apache-2.0",
  "author": "Volker Buzek",
  "scripts": {
    "build": "ui5 build --clean-dest",
    "build:opt": "ui5 build self-contained --clean-dest --all",
    "clean": "rimraf dist coverage",
    "karma": "karma start",
    "karma-ci": "karma start karma-ci.conf.js",
    "karma-ci-cov": "karma start karma-ci-cov.conf.js",
    "lint": "eslint webapp",
    "//start": "production start, serves /dist and thus need a prior build",
    "start": "node index.js",
    "//start:local": "dev-time only",
    "start:local": "ui5 serve --port 8080",
    "test": "npm run lint && npm run karma-ci-cov",
    "test:e2e": "run-p -r start:local \"wdi5 -- --headless\"",
    "ts-typecheck": "tsc --noEmit",
    "wdi5": "wait-on tcp:8080 && wdio run ./webapp/test/e2e/wdio.conf.ts"
  },
  "dependencies": {
    "@sap/approuter": "^17.1.0",
    "feelers": "^1.4.0"
  },
  "devDependencies": {
    "@camunda8/user-task-fiori": "file:../user-task-fiori",
    "@openui5/types": "^1.130.1",
    "@ui5/cli": "^4.0.10",
    "@wdio/cli": "^8",
    "@wdio/local-runner": "^8",
    "@wdio/mocha-framework": "^8",
    "@wdio/spec-reporter": "^8",
    "eslint": "^9.15.0",
    "globals": "^15.12.0",
    "karma": "^6.4.4",
    "karma-chrome-launcher": "^3.2.0",
    "karma-coverage": "^2.2.1",
    "karma-ui5": "^4.1.0",
    "karma-ui5-transpile": "^3.5.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.16.0",
    "ui5-middleware-livereload": "^3.1.0",
    "ui5-tooling-modules": "^3.18.7",
    "ui5-tooling-transpile": "^3.5.1",
    "wait-on": "^8.0.1",
    "wdio-ui5-service": "^2.0.10"
  },
  "engines": {
    "node": "^22"
  }
}
